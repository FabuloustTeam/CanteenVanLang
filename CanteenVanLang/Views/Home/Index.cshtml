<section class="ftco-section ftco-no-pb">
    <div class="container">
        <div class="row">
            @if (categories.Count <= 6)
            {
                for (int i = 0; i < categories.Count; i++)
                {
                    <div class="col-lg-2 col-md-4 ">
                        <div class="sort w-100 text-center ftco-animate">
                            <div class="img" style="background-image: url(@categories[i].IMAGE_URL.Remove(0, 1).Replace(@"\", "/"))"></div>
                            <a href="#"><h3>@categories[i].CATEGORY_NAME</h3></a>
                        </div>
                    </div>
                }
            }
            else
            {
                for (int i = 0; i < 6; i++)
                {
                    <div class="col-lg-2 col-md-4 ">
                        <div class="sort w-100 text-center ftco-animate">
                            <div class="img" style="background-image: url(@categories[i].IMAGE_URL.Remove(0, 1).Replace(@"\", "/"));"></div>
                            <a href="#"><h3>@categories[i].CATEGORY_NAME</h3></a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Chuẩn vị cơm nhà</span>
                <h2>Món ăn</h2>
            </div>
        </div>
        <div class="row">
            @if (foods.Count <= 4)
            {
                foreach (var item in foods)
                {
                    <div class="col-md-3 d-flex">
                        <div class="product ftco-animate">
                            <div class="img d-flex align-items-center justify-content-center" style="background-image: url(@item.IMAGE_URL.Remove(0, 1).Replace(@"\", "/"));">
                                <div class="desc">
                                    <p class="meta-prod d-flex">
                                        <a href="#" class="d-flex align-items-center justify-content-center"><span class="flaticon-shopping-bag"></span></a>
                                        @*<a href="#" class="d-flex align-items-center justify-content-center"><span class="flaticon-heart"></span></a>*@
                                        <a href="#" class="d-flex align-items-center justify-content-center"><span class="flaticon-visibility"></span></a>
                                    </p>
                                </div>
                            </div>
                            <div class="text text-center">
                                <span class="category">@item.CATEGORY.CATEGORY_NAME</span>
                                <a href="#"><h2>@item.FOOD_NAME</h2></a>
                                <p class="mb-0"><span class="price">@item.PRICE.ToString("N0") VNĐ</span></p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                for (int i = 0; i < 4; i++)
                {
                    <div class="col-md-3 d-flex">
                        <div class="product ftco-animate">
                            <div class="img d-flex align-items-center justify-content-center" style="background-image: url(@foods[i].IMAGE_URL.Remove(0, 1).Replace(@"\", "/"));">
                                <div class="desc">
                                    <p class="meta-prod d-flex">
                                        <a href="#" class="d-flex align-items-center justify-content-center"><span class="flaticon-shopping-bag"></span></a>
                                        @*<a href="#" class="d-flex align-items-center justify-content-center"><span class="flaticon-heart"></span></a>*@
                                        <a href="#" class="d-flex align-items-center justify-content-center"><span class="flaticon-visibility"></span></a>
                                    </p>
                                </div>
                            </div>
                            <div class="text text-center">
                                <span class="category">@foods[i].CATEGORY.CATEGORY_NAME</span>
                                <a href="@Url.Action("Details", "Food", new { id = foods[i].ID })"><h2>@foods[i].FOOD_NAME</h2></a>
                                <p class="mb-0"><span class="price">@foods[i].PRICE.ToString("N0") VNĐ</span></p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <a href="@Url.Action("Index", "Food")" class="btn btn-primary d-block">Xem thêm món ăn  <span class="fa fa-long-arrow-right"></span></a>
            </div>
        </div>
    </div>
</section>

